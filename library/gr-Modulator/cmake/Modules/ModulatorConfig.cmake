INCLUDE(FindPkgConfig)
PKG_CHECK_MODULES(PC_MODULATOR Modulator)

FIND_PATH(
    MODULATOR_INCLUDE_DIRS
    NAMES Modulator/api.h
    HINTS $ENV{MODULATOR_DIR}/include
        ${PC_MODULATOR_INCLUDEDIR}
    PATHS ${CMAKE_INSTALL_PREFIX}/include
          /usr/local/include
          /usr/include
)

FIND_LIBRARY(
    MODULATOR_LIBRARIES
    NAMES gnuradio-Modulator
    HINTS $ENV{MODULATOR_DIR}/lib
        ${PC_MODULATOR_LIBDIR}
    PATHS ${CMAKE_INSTALL_PREFIX}/lib
          ${CMAKE_INSTALL_PREFIX}/lib64
          /usr/local/lib
          /usr/local/lib64
          /usr/lib
          /usr/lib64
)

INCLUDE(FindPackageHandleStandardArgs)
FIND_PACKAGE_HANDLE_STANDARD_ARGS(MODULATOR DEFAULT_MSG MODULATOR_LIBRARIES MODULATOR_INCLUDE_DIRS)
MARK_AS_ADVANCED(MODULATOR_LIBRARIES MODULATOR_INCLUDE_DIRS)

